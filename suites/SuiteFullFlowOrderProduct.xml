<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="SuiteFullFlowOrder" verbose="1" parallel="none">
    <listeners>
        <listener class-name="com.thuydung.listeners.TestListener"></listener>
    </listeners>
    <test name="Full Flow Order Product">
        <classes>
            <class name="com.thuydung.testcases.OrderTest">
                <methods>
                    <include name="TC_FlowOrderSuccessWithCouponValid"/>
                </methods>
            </class>
            <class name="com.thuydung.testcases.OrderTest">
                <methods>
                    <include name="TC_OrderProductWithCouponInvalid"/>
                </methods>
            </class>
            <class name="com.thuydung.testcases.OrderTest">
                <methods>
                    <include name="TC_CancelOrder"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>